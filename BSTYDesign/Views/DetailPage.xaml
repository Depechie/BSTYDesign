<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="BSTYDesign.Views.DetailPage">
	<ContentPage.Content>
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="60" />
				<RowDefinition Height="1*" />
				<RowDefinition Height="3*" />
			</Grid.RowDefinitions>
				
			<StackLayout x:Name="TitleLayout" Orientation="Horizontal" Grid.Row="0" Margin="20,20,20,10">
				<Label Text="BSTY" HorizontalOptions="StartAndExpand" Style="{StaticResource TitleLabelStyle}" />
				<Button HeightRequest="15" WidthRequest="15" Text="X" TextColor="Silver"
						Clicked="OnCloseClicked"/>
			</StackLayout>
		</Grid>
	</ContentPage.Content>
</ContentPage>
